{
  "name": "chibiengine",
  "version": "0.4.3-dev",
  "description": "Modern Web Game Engine based on PixiJS",
  "author": "Feavy",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/ChibiEngine/ChibiEngine.git"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./lib/esm/index.d.ts",
        "default": "./lib/esm/index.js"
      },
      "require": {
        "types": "./lib/cjs/index.d.ts",
        "default": "./lib/cjs/index.js"
      }
    }
  },
  "main": "lib/cjs/index.js",
  "module": "lib/esm/index.js",
  "types": "lib/esm/index.d.ts",
  "bundle": "dist/chibiengine.umd.cjs",
  "bundleModule": "dist/chibiengine.js",
  "bundleOutput": {
    "name": "chibiengine"
  },
  "files": [
    "lib",
    "dist",
    "*.d.ts"
  ],
  "scripts": {
    "build": "run-s build:index build:esm build:cjs build:vite",
    "build:vite": "vite build",
    "build:index": "node scripts/generateIndexFiles.js",
    "build:esm": "tsc --module ESNext --target es2020 --outDir lib/esm",
    "build:cjs": "tsc --module commonjs --target es6 --outDir lib/cjs",
    "test": "jest"
  },
  "dependencies": {
    "@types/css-font-loading-module": "^0.0.8",
    "pixi.js": "~7.3.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "esbuild": "^0.19.4",
    "jest": "^29.5.0",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6",
    "vite": "^4.4.9"
  },
  "resolutions": {
    "@babel/preset-env": "7.13.8"
  },
  "keywords": [
    "game",
    "engine",
    "2d",
    "pixijs",
    "typescript",
    "extensible",
    "entity-component-system"
  ]
}
